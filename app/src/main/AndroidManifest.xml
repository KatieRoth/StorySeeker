<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.katie.storyseeker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuizStart"
            android:label="@string/title_activity_quiz_start"
            android:parentActivityName=".StartScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.katie.storyseeker.StartScreen" />
        </activity>
        <activity
            android:name=".Seasons"
            android:label="@string/title_activity_seasons"></activity>
        <activity
            android:name=".Winter"
            android:label="@string/title_activity_winter"></activity>
        <activity
            android:name=".Summer"
            android:label="@string/title_activity_summer"></activity>
        <activity
            android:name=".Fall"
            android:label="@string/title_activity_fall"></activity>
        <activity
            android:name=".Spring"
            android:label="@string/title_activity_spring"></activity>
        <activity
            android:name=".SelectedBooks"
            android:label="@string/title_activity_selected_books"></activity>
        <activity
            android:name=".WishList"
            android:label="@string/title_activity_wish_list"
            android:parentActivityName=".StartScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.katie.storyseeker.StartScreen" />
        </activity>
        <activity
            android:name=".BookDescription"
            android:label="@string/title_activity_book_description"></activity>
        <activity
            android:name=".buyWebView"
            android:label="@string/title_activity_buy_web_view"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
