<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.katie.storyseeker" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuizStart"
            android:label="@string/title_activity_quiz_start"
            android:parentActivityName=".StartScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.katie.storyseeker.StartScreen" />
        </activity>
        <activity
            android:name=".Seasons"
            android:label="@string/title_activity_seasons"
            android:parentActivityName=".QuizStart" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.katie.storyseeker.QuizStart" />
        </activity>
        <activity
            android:name=".Winter"
            android:label="@string/title_activity_winter"
            android:parentActivityName=".Seasons" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.katie.storyseeker.Seasons" />
        </activity>
    </application>

</manifest>
