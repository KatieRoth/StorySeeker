<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.katie.storyseeker" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuizStart"
            android:label="@string/title_activity_quiz_start"
            android:parentActivityName=".StartScreen"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.katie.storyseeker.StartScreen" />
        </activity>
        <activity
            android:name=".Seasons"
            android:label="@string/title_activity_seasons"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Winter"
            android:label="@string/title_activity_winter"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Summer"
            android:label="@string/title_activity_summer"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Fall"
            android:label="@string/title_activity_fall"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Spring"
            android:label="@string/title_activity_spring"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SelectedBooks"
            android:label="@string/title_activity_selected_books"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".WishList"
            android:label="@string/title_activity_wish_list"
            android:parentActivityName=".StartScreen"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.katie.storyseeker.StartScreen" />
        </activity>
        <activity
            android:name=".ColdLadyBook"
            android:label="ColdLadyBook"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".WinterIsBook"
            android:label="@string/title_activity_winter_is_book"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MakingAFriend"
            android:label="@string/title_activity_making_afriend"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".BookDescription"
            android:label="@string/title_activity_book_description"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
