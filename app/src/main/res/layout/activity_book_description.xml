<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.katie.storyseeker.BookDescription"
    android:background="#C7C8CA">

    <ImageView
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:background="@drawable/animals"
        android:scaleType="fitXY"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#D2232A"
        android:textStyle="italic"
        android:textSize="21sp"
        android:layout_below="@+id/imageView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_below="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>


    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/home"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/homeButton" />


    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/wishlisticon"
        android:id="@+id/addToWishList"
        android:layout_marginLeft="80dp"
        android:layout_alignTop="@+id/buyButton"
        android:layout_toStartOf="@+id/imageView2" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/dollarsign"
        android:id="@+id/buyButton"
        android:layout_marginRight="80dp"
        android:layout_above="@+id/homeButton"
        android:layout_toEndOf="@+id/imageView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Wishlist"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_alignTop="@+id/textView3"
        android:layout_toStartOf="@+id/imageView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Now"
        android:layout_marginRight="15dp"
        android:textStyle="bold"
        android:textSize="10sp"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/homeButton"
        android:layout_alignEnd="@+id/buyButton" />




</RelativeLayout>
