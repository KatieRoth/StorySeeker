<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.katie.storyseeker.Fall">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/chooseone"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:src="@drawable/pumpkin"
        android:id="@+id/fallHolidays"
        android:background="@null"
        android:paddingLeft="20dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:src="@drawable/football"
        android:id="@+id/fallActivities"
        android:paddingLeft="20dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/fallHolidays"
        android:layout_toEndOf="@+id/fallHolidays" />
</RelativeLayout>
