<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.katie.storyseeker.Seasons">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/categories"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:src="@drawable/snowflake"
        android:scaleType="fitXY"
        android:background="@null"
        android:onClick="winter"
        android:id="@+id/winter"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:layout_alignTop="@+id/summer"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:src="@drawable/sun"
        android:scaleType="fitXY"
        android:background="@null"
        android:id="@+id/summer"
        android:onClick="summer"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:layout_marginTop="123dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/fall" />
    <ImageView
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:scaleType="fitXY"
        android:src="@drawable/flower"
        android:background="@null"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:id="@+id/spring"
        android:onClick="spring"
        android:layout_below="@id/summer" />
    <ImageView
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:scaleType="fitXY"
        android:src="@drawable/leaf"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:background="@null"
        android:id="@+id/fall"
        android:onClick="fall"
        android:layout_below="@id/summer"
        android:layout_toEndOf="@+id/spring" />

</RelativeLayout>
