<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.katie.storyseeker.Summer">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/categories"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:src="@drawable/flag"
        android:id="@+id/summerHolidays"
        android:background="@null"
        android:paddingLeft="20dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:src="@drawable/beachball"
        android:id="@+id/summerActivities"
        android:paddingLeft="20dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/summerHolidays"
        android:layout_toEndOf="@+id/summerHolidays" />

</RelativeLayout>
