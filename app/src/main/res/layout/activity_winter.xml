<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.katie.storyseeker.Winter">
    <!--> Rachel Davis <-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/chooseone"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80dp"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:src="@drawable/ornament"
        android:id="@+id/winterHolidays"
        android:background="@null"
        android:paddingLeft="20dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:onClick="holidays"
        />
    <ImageButton
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:src="@drawable/iceskate"
        android:id="@+id/winterActivities"
        android:paddingLeft="20dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/winterHolidays"
        android:layout_toEndOf="@+id/winterHolidays"
        android:onClick="activities"/>
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/home"
        android:onClick="home"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/winterActivities" />
</RelativeLayout>
