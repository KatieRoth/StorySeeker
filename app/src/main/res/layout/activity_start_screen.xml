<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".StartScreen">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/wishlist" />
    <ImageButton
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:background="@null"
        android:id="@+id/quiz"
        android:textSize="20sp"
        android:src="@drawable/findastoryicon"
        android:onClick="quiz"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="find a story"
        android:layout_marginLeft="30dp"
        android:textSize="40sp"
        android:layout_below="@+id/quiz"
        android:layout_alignStart="@+id/quiz"
        android:textStyle="bold"/>
    <ImageButton
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginLeft="10dp"
        android:id="@+id/wishlist"
        android:textSize="20sp"
        android:src="@drawable/seewishlist"
        android:onClick="wishlist"
        android:layout_alignTop="@+id/quiz"
        android:layout_toEndOf="@+id/quiz" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="see wishlist"
        android:textSize="40sp"
        android:layout_below="@+id/wishlist"
        android:layout_marginRight="30dp"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:src="@drawable/scholasticlogo"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
